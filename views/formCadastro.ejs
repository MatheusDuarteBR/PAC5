    <h1>Preencha o Formulario para poder adotar um animal.</h1><br>
    <form action="<%= action %>" method="POST">
      <table>
        <tr>
            <div>
              <label for="nome">Nome:</label><br>
              <input type="text" name="edtNome" value="<%= usuario.nome %>" />
            </div>
            <div>  
              <label for="idade">idade:</label><br>
              <input type="number" name="edtIdade" value="<%= usuario.idade %>" />
            </div>
            <div>
              <label for="telefone">Telefone:</label><br>
              <input type="tel" id="tel" name="edtTelefone" value="<%= usuario.telefone %>" />
            </div>  
            <div>
              <label for="Cpf">Cpf:</label><br>
              <input type="number" max="11" name="edtCpf" value="<%= usuario.cpf %>" />
            </div>  
              <label for="Data de Nascimento">Data de Nascimento:</label><br>
              <input id="date" type="date" name="edtNasc" value="<%= usuario.nasc %>" />
            <div>
              <label for="senha">senha:</label><br>
              <input type="password" name="edtSenha" value="<%= usuario.senha %>" />
            </div>  
            <div>
              <label for="usuario">usuario:</label><br>
              <input type="text" name="edtLogin" value="<%= usuario.login %>" />
            </div>
            <tr>

              

              <td><a href="/"> <button class="btn btn-primary"> Cancelar </button>  </a></td>
              <td><button type="submit" value="Salvar" class="btn btn-primary">Save</button></td>
