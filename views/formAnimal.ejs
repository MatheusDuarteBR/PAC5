    <body>
        <h1><%= title %></h1>
        <p>Preencha os dados abaixo e clique em Salvar o novo animal.</p>

        <div class="conteiner">
          <div class="row1">
            <div>
                <form action="<%= action %>" method="POST" >
                    <table>
                      <div class="col-md-12 position-relative">
                        <label for="validationTooltip01" class="form-label">Nome :</label>
                        <input type="text" name="edtAniNome" value="<%= registro.aninome %>" />
                        <div class="valid-tooltip">
                        </div>
                      </div>
                      <div class="col-md-12 position-relative">
                        <label for="validationTooltip01" class="form-label">Idade :</label>
                        <input type="number" name="edtAniIdade" value="<%= registro.aniidade %>" />
                        <div class="valid-tooltip">
                        </div>
                      </div>
                      <div class="col-md-12 position-relative">
                        <label for="validationTooltip01" class="form-label">Cor   :</label>
                        <input type="text" name="edtAniCor" value="<%= registro.anicor %>" />
                        <div class="valid-tooltip">
                        </div>
                      <div class="col-md-3 position-relative">
                          <label for="validationTooltip03" class="form-label">Gênero</label>
                          <select class="form-select" name="cmbGenero"  id="validationTooltip03" required>
                            <option value="1" <% if(registro.gencodigo == 1) { %> selected <% } %> >Gato</option>
                            <option value="2" <% if(registro.gencodigo == 2) { %> selected <% } %> >Cachorro</option>
                            <option value="3" <% if(registro.gencodigo == 3) { %> selected <% } %> >Cavalo</option>
                            <option value="4" <% if(registro.gencodigo == 4) { %> selected <% } %> >Papagaio</option>
                          </select>
                          <div class="invalid-tooltip">
                            Please select a valid state.
                      </div>
                      </div>
                      <div class="col-md-12 position-relative">
                        <label for="validationTooltip01" class="form-label">Foto do animal :</label>
                        <input input type="file"  name="edtAniImagem" value="<%= registro.aniimagem %>" />
                        <div class="valid-tooltip">
                        </div>
                      </div>
                      <div class="col-md-12 position-relative">
                        <label for="validationTooltip01" class="form-label">Descrição:</label>
                        <input type="text" name="edtAniDescricao" value="<%= registro.anidescricao %>" />
                        <div class="valid-tooltip">
                        </div>
                      </div>

                            <button id="Cancelar" class="btn btn-primary" value="Cancelar" ><a  href="/listaDeAnimal" style="color: white;text-decoration: none;" >Cancelar</a></button>
                            <button id="Salvar" type="submit" class="btn btn-primary" value="Salvar" ><a>Salvar</button></a></button>
                    </table>
                  </form>
            </div>
          </div>
        </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>